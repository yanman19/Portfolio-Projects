def create_charts_tab(df, column_list):
    text_input = pn.widgets.AutocompleteInput(
        name='Enter Variable:',
        options=column_list,
        case_sensitive=False,
        placeholder='Start typing...',
        width=300,
        margin=(0, 0, 20, 0)
    )

    output_pane = pn.Column(width=1200, sizing_mode='fixed')

    def update_chart(event):
        if event.new in column_list:
            chart = make_path_chart(event.new, df)
            output_pane.clear()
            output_pane.append(chart)

    text_input.param.watch(update_chart, 'value')

    title = pn.pane.Markdown(
        "<div style='text-align:center; font-size:22px; font-weight:600; margin-bottom:10px;'>Path Chart</div>",
        width=1200
    )

    chart_block = pn.Column(
        title,
        text_input,
        output_pane,
        width=1200,
        css_classes=['table-container']
    )

    row_layout = pn.Row(chart_block, width=2500, sizing_mode='fixed')

    path_tab = pn.Column(
        pn.Spacer(height=10),
        row_layout,
        pn.Spacer(height=30),
        width=2500
    )

    scatter_tab = pn.Column(pn.Spacer(height=20), width=2500)

    return pn.Tabs(
        ('Path', path_tab),
        ('Scatter', scatter_tab),
        tabs_location='above',
        width=2500
    )